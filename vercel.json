{
  "version": 2,
  "framework": null,
  "buildCommand": "npm install && npm run build && node vercel-deploy.js",
  "installCommand": "echo 'Using custom buildCommand instead'",
  "outputDirectory": "public",
  "devCommand": "npm run dev",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=0" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(.*)", "destination": "/" }
  ]
}